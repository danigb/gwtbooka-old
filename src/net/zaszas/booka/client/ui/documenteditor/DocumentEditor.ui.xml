<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style src="DocumentEditor.css" />
		
	<g:ScrollPanel styleName="{style.container}">
		<g:FlowPanel styleName="{style.page}" ui:field="page">
			<g:Label styleName="{style.title}" ui:field="title">Title</g:Label>
			<g:Label styleName="{style.description}" ui:field="description">Description</g:Label>
			<g:FlowPanel ui:field="content"></g:FlowPanel>
		</g:FlowPanel>
	</g:ScrollPanel>
</ui:UiBinder> 